[user]
  name = Ellis Clayton
  email = ellis@ellis.codes
  signingkey = 0xDEF7E66A739ACB11
[push]
  default = simple
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[alias]
  # https://gist.github.com/mwhite/6887990
  a = add
  ap = add -p
  b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
  c = commit --verbose
  ca = commit --amend
  can = commit --amend --no-edit
  cm = commit -m
  cmb = "!git fetch -p && for branch in `git branch -vv | grep ': gone]' | awk '{print $1}'`; do git branch -D $branch; done"
  co = checkout
  cob = checkout -b
  d = diff
  dc = diff --cached
  ds = diff --stat
  ffm = merge --ff-only
  fix = "!$EDITOR `git diff --name-only | uniq`"
  fu = commit --fixup
  hard-pull = "!git fetch origin $(git rev-parse --abbrev-ref HEAD) && git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)"
  l = log --pretty=format:"%C(yellow)%h\\ %C(red)%ad%Cred\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --no-merges
  lb = l master..HEAD
  la = "!git config -l | grep alias | cut -c 7-"
  m = commit --amend --verbose
  pn = "!git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\""
  ras = rebase -i --autosquash --autostash
  rasm = rebase -i --autosquash --autostash origin/master
  s = status -s
[core]
  excludesfile = ~/.gitignore_global
  pager = delta --dark --theme="ansi-dark"
[interactive]
  diffFilter = delta --color-only
[log]
  mailmap = true
[commit]
  template = ~/.commitmessage
  gpgsign = true
  verbose = true
[diff]
  meta = "11"
  frag = "magenta bold"
  commit = "yellow bold"
  old = "red bold"
  new = "green bold"
  whitespace = "red reverse"
[diff "gpg"]
  textconv = gpg --quiet --no-tty --decrypt
[pull]
  ff = only
[sendemail]
  smtpserver = 127.0.0.1
  smtpserverport = 1025
  smtpuser = ellis@ellis.codes
  smtpencryption = tls
  smtpsslcertpath = ~/.mail/bridge.crt
[credential]
  helper = store
