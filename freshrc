# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

. ~/.dotfiles/setup/environment.sh

fresh freshshell/fresh bin/fresh --bin
fresh freshshell/fresh contrib/source-build.sh --file=~/.zshrc

# Shell
fresh-options
  if [[ $OS == "arch" ]]; then
    fresh env/arch/\*
  fi

  if [[ $OS == "ubuntu" ]]; then
    fresh env/ubuntu/\*
  fi

  fresh env/\*
  fresh robbyrussell/oh-my-zsh lib/history.zsh

  fresh env/aliases.sh
fresh-options

if ! [[ $OS == "ubuntu" ]]; then
  fresh config/alacritty/\*.yml --file=~/.config/alacritty/alacritty.yml --filter=gomplate
  fresh config/redshift.conf --file=~/.config/redshift/redshift.conf
fi

# Starship Prompt
fresh config/starship.toml --file=~/.config/starship.toml

# Bin
fresh bin/\* --bin

if [[ $OS == "arch" ]]; then
  fresh bin/arch/\* --bin
fi

# GPG
if ! [[ $OS == "ubuntu" ]]; then
  fresh gnupg/gpg.conf --file=~/.gnupg/gpg.conf
  fresh gnupg/gpg-agent.conf --file=~/.gnupg/gpg-agent.conf
fi

# Git
fresh git/\* --file

fresh-options --file=~/.gitignore_global --marker=#
  fresh github/gitignore Global/Vagrant.gitignore
  fresh github/gitignore Global/Vim.gitignore
  fresh github/gitignore Node.gitignore
  fresh git/gitignore
fresh-options

# Vim
fresh config/nvim/plugins/coc.json --file=~/.config/nvim/coc-settings.json
fresh-options --file=~/.config/nvim/init.vim
  fresh config/nvim/plugs.vim
  fresh config/nvim/config/\*.vim
  fresh config/nvim/plugins/\*.vim
  fresh hackling/dotfiles vim/keybindings/visualblockindent.vim
  fresh config/nvim/colors.vim
fresh-options

# i3wm, etc.
if [[ $OS == "arch" ]]; then
  fresh-options --file=~/.config/i3/config --marker=#
    fresh config/i3/keybindings/\* --filter=gomplate
    fresh config/i3/\*
  fresh-options
  fresh config/rofi/\* --file=~/.config/rofi/config --marker=#
  fresh-options --file=~/.config/polybar/config --marker=";"
    fresh config/polybar/colors
    fresh config/polybar/config
    fresh config/polybar/bar
    if [[ -z ${LAPTOP+x} ]]; then
      fresh config/polybar/overrides/desktop/bar
    else
      fresh config/polybar/overrides/laptop/bar
    fi

    fresh config/polybar/modules/\*
  fresh-options

  fresh config/xinitrc --file

  # Picom
  fresh config/picom/\*.conf --file=~/.config/picom.conf

  # Rofi
  fresh config/Xresources --file --marker=!
fi

# Neomutt
fresh config/neomutt/\* --file=~/.config/neomutt/neomuttrc
fresh config/mailcap --file
fresh config/mbsyncrc --file
